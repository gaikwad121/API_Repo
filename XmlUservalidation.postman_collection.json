          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = xml2Json(pm.response.text());\r",
              "console.log(\"Parsed Response:\", jsonData);\r",
              "\r",
              "pm.test(\"Check status code\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "// Determine Pet node\r",
              "var petNode = jsonData.Pet || (jsonData.Pets && jsonData.Pets.Pet);\r",
              "\r",
              "if (!petNode) {\r",
              "    console.log(\"No Pet node found in response\");\r",
              "} else {\r",
              "    if (Array.isArray(petNode)) petNode = petNode[0]; // first pet if array\r",
              "\r",
              "   \r",
              "\r",
              "    pm.test(\"Check Pet Name exists\", function () {\r",
              "        pm.expect(petNode.name).to.be.a('string').and.not.empty;\r",
              "    });\r",
